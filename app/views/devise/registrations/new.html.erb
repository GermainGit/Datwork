<div class="full" style="color: black">
  <div class="container2">
    <div class="log">
      <h1 style="color:black">Inscription</h1>
       <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
    <form class="form-signin">
      <p>E-Mail :</p>
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %><br/>
      <p>Prenom :</p>
      <%= f.text_field :prenom, autofocus: true, autocomplete: "prenom" %><br/>
      <p>Mot de passe :</p>
      <%= f.password_field :password, autocomplete: "off" %>
      <p>Mot de passe confirmation :</p>
      <%= f.password_field :password_confirmation, autocomplete: "off" %>
      <div class="but"><%= f.submit "Sign up" %></div>
      <% end -%>
      </div>
      <a class="btn button-default" href="/users/sign_in">Sign In</a>
    </form>
  </div>
</div>
</div>


